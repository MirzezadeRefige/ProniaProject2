@model SliderItem


<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                    <p class="card-description">
                        <a asp-action="Index" style="color:black">Go Back</a>
                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning" style="color:white">Update</a>
                        <a asp-action="Remove" asp-route-id="@Model.Id" class="btn btn-danger" style="color:white">Remove</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Img
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Short Description
                                    </th>
                                    <th>
                                        Offer
                                    </th>
                                  
                                    <th>
                                        Is Deleted
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                    


                                </tr>
                            </thead>
                            <tbody>
                              
                                    <tr>

                                  
                                        <td>@Model.Id</td>
                                        <td class="py-1">
                                            <img src="~/admin/assets/images/labmedya_bitkiler-direnebilirmi.jpg" image" />
                                        </td>
                                        <td>
                                        @Model.Title
                                        </td>
                                        <td>
                                        @Model.ShortDescription
                                        </td>
                                        <td>
                                        @Model.Offer %
                                        </td>
                                        <td>

                                        @Model.IsDeleted
                                        </td>
                                        <td>
                                            <a asp-action="Info" asp-route-id="@Model.Id" class="btn btn-info" style="color:white">Info</a>
                                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning" style="color:white">Update</a>
                                        <a asp-action="SoftDelete" asp-route-id="@Model.Id" class="btn btn-danger" style="color:white">Remove</a>

                                           
                                        </td>
                                        
                                
                                </tr>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>